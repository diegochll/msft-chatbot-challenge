{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "${country_flag}",
                                            "size": "Small"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${title}",
                                            "size": "Medium",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "size": "Medium",
                                            "text": "${country} - ${time_frame}",
                                            "spacing": "None",
                                            "height": "stretch",
                                            "color": "Dark",
                                            "fontType": "Default",
                                            "maxLines": 1
                                        }
                                    ],
                                    "width": "stretch"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Confirmed",
                                            "size": "Medium"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${data.confirmed} ",
                                            "fontType": "Default",
                                            "size": "Large",
                                            "weight": "Bolder",
                                            "spacing": "Small",
                                            "color": "Warning"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Deaths",
                                            "size": "Medium"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${data.deaths}\n",
                                            "color": "Dark",
                                            "size": "Large",
                                            "height": "stretch",
                                            "spacing": "Small",
                                            "fontType": "Default",
                                            "weight": "Bolder"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Recovered",
                            "fontType": "Default",
                            "size": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${data.recovered}\n",
                            "color": "Good",
                            "size": "Large",
                            "weight": "Bolder",
                            "spacing": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Rate New Cases",
                            "size": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${data.rate_new_cases}\n",
                            "size": "Large",
                            "weight": "Bolder",
                            "color": "Attention",
                            "spacing": "Small"
                        }
                    ]
                }
            ],
            "spacing": "Padding"
        },
        {
            "type": "TextBlock",
            "text": "Retrieved from Johns Hopkins CSSE",
            "weight": "Lighter",
            "size": "Small",
            "spacing": "None",
            "height": "stretch"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}